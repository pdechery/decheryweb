/* Smartphones (portrait) ----------- */
@media only screen and (max-width : 320px) {
	
	header {
		display: none;
	}
	
	#main-panel {
		div.area {
			width:220px;
			height:140px;
			top:50%;
			left:50%;
			margin-left:-110px;
			margin-top:-70px;
			div.code {
				font-size: 1em;
				line-height: 1.6em;
			}
		}
	}

	div#switch {
		display:none!important;
		span {
			padding: 10px;
			i {
				font-size: .9em;
			}
		}
	}

	#sobre {
		margin-bottom: 20px;
		div.code > div {
			padding-left: 0;
		}
		/*min-height:;*/
		div.area {
			width:220px;
			height: auto;
			top: 10%;
			left: 50%;
			margin-left:-110px;
			font-size: .9em;
			#nav {
				display: none;
			}
		}
		div#down {
			display: none;
		}
	}

	#work {
		display: none;
	}

}

